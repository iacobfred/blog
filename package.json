{
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "PORT=$(grep '^PORT=' .env | cut -d '=' -f2) next dev",
    "lint": "next lint",
    "start": "PORT=$(grep '^PORT=' .env | cut -d '=' -f2) next start",
    "prepare": "husky install"
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@mui/material": "^5.10.3",
    "date-fns": "^2.11.1",
    "gray-matter": "^4.0.2",
    "next": "latest",
    "next-seo": "^5.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark": "^14.0.1",
    "remark-html": "^15.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.14",
    "@types/react": "^18.0.18",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-next": "^12.2.5",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-react": "^7.31.7",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-standard": "^28.0.0",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "npx stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
